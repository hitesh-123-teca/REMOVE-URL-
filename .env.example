# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here_123456:ABCdefGHIjklMNOpqrSTUvwxYZ
BOT_NAME=URL Remover Bot
ADMIN_IDS=123456789,987654321

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/url_remover_bot
MONGO_USER=admin
MONGO_PASSWORD=strong_password_here

# Application Settings
LOG_LEVEL=INFO
MAX_FILE_SIZE=52428800  # 50MB in bytes
SUPPORTED_FORMATS=.mp4,.avi,.mov,.mkv,.webm,.flv,.wmv
MAX_MESSAGE_LENGTH=4000

# Server Configuration (for Koyeb)
PORT=8080
HOST=0.0.0.0

# Feature Toggles
ENABLE_DUPLICATE_CHECK=true
ENABLE_URL_REMOVAL=true
ENABLE_STATISTICS=true
ENABLE_WELCOME_MESSAGE=true

# Text Customization
URL_REPLACEMENT_TEXT=[LINK REMOVED]
WELCOME_MESSAGE=Welcome! I remove URLs from your videos and text.
ERROR_MESSAGE=Sorry, an error occurred. Please try again.

# Cleanup Settings
TEMP_FILE_TTL=3600  # 1 hour in seconds
LOG_RETENTION_DAYS=30
MAX_USER_REQUESTS_PER_DAY=100
