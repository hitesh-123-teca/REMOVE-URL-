# ============================================
# TELEGRAM AUTO FORWARD BOT - CONFIGURATION
# ============================================

# [REQUIRED] Telegram API Credentials
# Get from: https://my.telegram.org
API_ID=12345678
API_HASH=abcdef1234567890abcdef1234567890

# [REQUIRED] Bot Token
# Get from: @BotFather on Telegram
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz-ABCDEFGHI

# [REQUIRED] Channel IDs
# Must be in format: -1001234567890
# Bot must be admin in both channels
SOURCE_CHANNEL=-1001234567890
DESTINATION_CHANNEL=-1009876543210

# [REQUIRED] MongoDB Connection
# Local: mongodb://localhost:27017
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=telegram_bot

# [OPTIONAL] Bot Settings
BOT_NAME=AutoForwardBot
ADMIN_ID=123456789                    # Your Telegram ID for notifications
SESSION_STRING=                       # Leave empty for first run

# [OPTIONAL] Content Processing
REMOVE_URLS=true                      # Remove URLs from captions (true/false)
REMOVE_MENTIONS=true                  # Remove @mentions (true/false)
ADD_WATERMARK=false                   # Add watermark to forwarded videos (true/false)
WATERMARK_TEXT=ðŸ“¤ Forwarded via Bot   # Watermark text

# [OPTIONAL] Performance Settings
MAX_FILE_SIZE=524288000               # 500MB in bytes
DELAY_BETWEEN_FORWARDS=2.0            # Seconds between forwards
RATE_LIMIT=20                         # Messages per minute

# [OPTIONAL] Web Server
WEB_SERVER_PORT=8080                  # Port for health check API
WEB_SERVER_HOST=0.0.0.0               # Host for web server

# [OPTIONAL] Logging
LOG_LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR
LOG_FILE=bot.log                      # Log file name

